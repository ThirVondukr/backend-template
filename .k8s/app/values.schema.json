{
  "$schema": "https://json-schema.org/2022-12/schema#",
  "$defs": {
    "custom": {
      "PullPolicy": {
        "type": "string",
        "enum": [
          "Always",
          "Never",
          "IfNotPresent"
        ]
      },
      "Storage": {
        "type": "object",
        "properties": {
          "className": {
            "type": "string"
          },
          "size": {
            "type": "string"
          }
        },
        "required": [
          "className",
          "size"
        ],
        "additionalProperties": false
      }
    },
    "io.k8s.api.core.v1.PodSecurityContext": {
      "$ref": "https://raw.githubusercontent.com/yannh/kubernetes-json-schema/refs/heads/master/v1.31.1-standalone-strict/_definitions.json#/definitions/io.k8s.api.core.v1.PodSecurityContext"
    },
    "io.k8s.api.core.v1.Volume": {
      "$ref": "https://raw.githubusercontent.com/yannh/kubernetes-json-schema/refs/heads/master/v1.31.1-standalone-strict/_definitions.json#/definitions/io.k8s.api.core.v1.Volume"
    },
    "io.k8s.api.core.v1.VolumeMount": {
      "$ref": "https://raw.githubusercontent.com/yannh/kubernetes-json-schema/refs/heads/master/v1.31.1-standalone-strict/_definitions.json#/definitions/io.k8s.api.core.v1.VolumeMount"
    },
    "io.k8s.api.core.v1.ResourceRequirements": {
      "$ref": "https://raw.githubusercontent.com/yannh/kubernetes-json-schema/refs/heads/master/v1.31.1-standalone-strict/_definitions.json#/definitions/io.k8s.api.core.v1.ResourceRequirements"
    },
    "io.k8s.api.core.v1.SecurityContext": {
      "$ref": "https://raw.githubusercontent.com/yannh/kubernetes-json-schema/refs/heads/master/v1.31.1-standalone-strict/_definitions.json#/definitions/io.k8s.api.core.v1.SecurityContext"
    },
    "io.k8s.api.core.v1.EnvFromSource": {
      "$ref": "https://raw.githubusercontent.com/yannh/kubernetes-json-schema/refs/heads/master/v1.31.1-standalone-strict/_definitions.json#/definitions/io.k8s.api.core.v1.EnvFromSource"
    }
  },
  "additionalProperties": false,
  "title": "Values",
  "type": "object",
  "properties": {
    "image": {
      "properties": {
        "repository": {
          "type": "string"
        },
        "pullPolicy": {
          "$ref": "#/$defs/custom/PullPolicy"
        },
        "tag": {
          "type": "string"
        }
      },
      "required": [
        "repository",
        "pullPolicy",
        "tag"
      ],
      "type": "object",
      "additionalProperties": false
    },
    "api": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "probePath": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "replicaCount": {
          "type": "integer"
        },
        "resources": {
          "$ref": "#/$defs/io.k8s.api.core.v1.ResourceRequirements"
        },
        "tmpfs": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "sizeLimit": {
              "type": "string"
            }
          }
        },
        "antiAffinity": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          }
        },
        "ingress": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "host": {
              "type": "string"
            },
            "className": {
              "type": "string"
            },
            "annotations": {
              "type": "object"
            },
            "path": {
              "type": "string"
            },
            "pathType": {
              "type": "string"
            },
            "tls": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "hosts": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "secretName": {
                    "type": "string"
                  }
                },
                "required": [
                  "hosts",
                  "secretName"
                ],
                "additionalProperties": false
              }
            }
          },
          "required": [
            "enabled",
            "host",
            "className",
            "annotations",
            "path",
            "pathType",
            "tls"
          ],
          "additionalProperties": false
        },
        "service": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "args",
        "enabled",
        "probePath",
        "ingress",
        "port",
        "replicaCount",
        "resources",
        "service",
        "tmpfs"
      ],
      "additionalProperties": false
    },
    "commonEnvFrom": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/io.k8s.api.core.v1.EnvFromSource"
      }
    },
    "cronjobs": {
      "type": "object",
      "properties": {
        "resources": {
          "$ref": "#/$defs/io.k8s.api.core.v1.ResourceRequirements"
        },
        "tasks": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[a-z-]+$": {
              "type": "object",
              "properties": {
                "schedule": {
                  "type": "string"
                },
                "entrypoint": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "suspended": {
                  "type": "boolean"
                }
              },
              "required": [
                "schedule",
                "entrypoint"
              ],
              "additionalProperties": false
            }
          }
        }
      },
      "required": [
        "resources"
      ],
      "additionalProperties": false
    },
    "fullnameOverride": {
      "type": "string"
    },
    "nameOverride": {
      "type": "string"
    },
    "securityContext": {
      "$ref": "#/$defs/io.k8s.api.core.v1.SecurityContext"
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ],
        "additionalProperties": false
      }
    },
    "migrations": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "command": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "resources": {
          "$ref": "#/$defs/io.k8s.api.core.v1.ResourceRequirements"
        }
      },
      "required": [
        "enabled",
        "command",
        "resources"
      ],
      "additionalProperties": false
    },
    "podSecurityContext": {
      "$ref": "#/$defs/io.k8s.api.core.v1.PodSecurityContext"
    },
    "podAnnotations": {
      "type": "object",
      "patternProperties": {
        "^[a-z.]+$": {
          "type": "string"
        }
      }
    },
    "redis": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer"
        },
        "enabled": {
          "type": "boolean"
        },
        "image": {
          "type": "string"
        },
        "resources": {
          "$ref": "#/$defs/io.k8s.api.core.v1.ResourceRequirements"
        },
        "storage": {
          "$ref": "#/$defs/custom/Storage"
        },
        "networkPolicy": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          },
          "additionalProperties": false,
          "required": [
            "enabled"
          ]
        },
        "global": {
          "type": "object"
        }
      },
      "required": [
        "image",
        "enabled",
        "port",
        "storage",
        "resources"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "api",
    "commonEnvFrom",
    "cronjobs",
    "fullnameOverride",
    "image",
    "imagePullSecrets",
    "migrations",
    "nameOverride",
    "podAnnotations",
    "podSecurityContext",
    "securityContext",
    "redis"
  ]
}
